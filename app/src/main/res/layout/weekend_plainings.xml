<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <!-- NOTE: This list should be displayed in a list
    instead of nested layouts -->
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20dp"
            android:textColor="@color/blue"
            android:fontFamily="@font/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Meals Per Week"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/fivedays"
            android:theme="@style/checkBoxComponent"
            android:textColorHint="@color/blue"
            android:textSize="15dp"
            android:textColor="@color/blue"
            android:fontFamily="@font/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Days Per Week"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/sixdays"
            android:theme="@style/checkBoxComponent"
            android:textColorHint="@color/blue"
            android:textSize="15dp"
            android:textColor="@color/blue"
            android:fontFamily="@font/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 Days Per Week"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/proceed"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Proceed"/>
    </LinearLayout>


</LinearLayout>