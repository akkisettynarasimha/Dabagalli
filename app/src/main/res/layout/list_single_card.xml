<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="vertical"
    android:layout_marginTop="5dp">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout

                android:elevation="7dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <TextView

                            android:fontFamily="@font/one"
                            android:id="@+id/rice_name"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:typeface="sans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rice"
                            android:textColor="@color/blue"
                            android:textSize="15dp" />


                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:gravity="center|center_horizontal"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/sub_image_count"
                                android:gravity="center|center_horizontal"
                                android:background="@drawable/right_background"
                                android:src="@drawable/sub"
                                android:layout_width="30dp"
                                android:padding="2dp"
                                android:layout_height="match_parent" />
                            <TextView
                                android:id="@+id/itemquantity"
                                android:gravity="center"
                                android:paddingRight="5dp"
                                android:paddingLeft="5dp"
                                android:text="0"
                                android:textColor="#07324c"
                                android:background="@drawable/background_space"
                                android:layout_width="25dp"
                                android:layout_height="match_parent" />
                            <ImageView
                                android:id="@+id/add_image_count"
                                android:layout_width="30dp"
                                android:padding="2dp"
                                android:gravity="center|center_horizontal"
                                android:background="@drawable/lift_background"
                                android:src="@drawable/add"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/total_amount"
                                android:text="100.00"
                                android:textSize="12dp"
                                android:layout_marginRight="5dp"
                                android:gravity="center|center_horizontal"
                                android:textColor="@color/blue"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>